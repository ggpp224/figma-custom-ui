{
  "name": "figma-custom-ui",
  "version": "1.0.0",
  "description": "基于 Ant Design 的二次封装组件库",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:plugin": "npm run build:plugin:code && npm run build:plugin:ui && npm run build:plugin:copy",
    "build:plugin:code": "tsc -p figma-plugin/tsconfig.json",
    "build:plugin:ui": "vite build --config figma-plugin/vite.config.ts",
    "build:plugin:copy": "cp figma-plugin/dist-code/code.js figma-plugin/code.js && cp figma-plugin/dist/figma-plugin/ui/index.html figma-plugin/ui-bundled.html",
    "watch:plugin": "vite build --watch --config figma-plugin/vite.config.ts",
    "dev:plugin": "npm run build:plugin:code && npm run watch:plugin"
  },
  "keywords": [
    "react",
    "antd",
    "component-library",
    "figma"
  ],
  "author": "Peng.Guo",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.12.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.83.0",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@types/minimatch": "^5.1.2",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "storybook": "^7.6.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.6.4",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
